<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="400.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.LogInController">
   <center>
      <VBox alignment="CENTER" minHeight="-Infinity" minWidth="-Infinity" spacing="20.0" BorderPane.alignment="CENTER">
         <children>
            <TextField fx:id="usernameField" promptText="Username" />
            <PasswordField fx:id="passwordField" promptText="Password" />
            <Button fx:id="logInButton" mnemonicParsing="false" onAction="#logIn" text="Prihlásiť sa " />
            <Button fx:id="switchToHomeButton" mnemonicParsing="false" onAction="#switchToHome" text="Späť" />
         </children>
         <padding>
            <Insets left="100.0" right="100.0" />
         </padding>
      </VBox>
   </center>
   <bottom>
      <Region prefHeight="20.0" BorderPane.alignment="CENTER" />
   </bottom>
   <right>
      <Region prefWidth="20.0" BorderPane.alignment="CENTER" />
   </right>
   <left>
      <Region prefWidth="20.0" BorderPane.alignment="CENTER" />
   </left>
   <top>
      <Label prefHeight="20.0" text="Prihlásenie" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets top="50.0" />
         </BorderPane.margin>
         <font>
            <Font size="24.0" />
         </font>
      </Label>
   </top>
</BorderPane>
